{
    "workbench.activityBar.visible": true, // Explorer, Search, Git, Debug, Extension pane
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.enableExperiments": false,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#353d4994",
    },
    "editor.rulers": [80, 100, 120],
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "search.showLineNumbers": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
    },
    "files.associations": {
        "*.*log*": "log",
        "Dockerfile*": "dockerfile",
        "Makefile*": "makefile",
    },
    "files.defaultLanguage": "log",
    "extensions.ignoreRecommendations": false,
    "breadcrumbs.enabled": true,
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
    "C_Cpp.suggestSnippets": false,
    "C_Cpp.intelliSenseCacheSize": 10240,
    "C_Cpp.workspaceParsingPriority": "high",
    "C_Cpp.workspaceSymbols": "All",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.scrollable": false,
    "gitlens.hovers.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.defaultDateShortFormat": "DD-MM-YYYY",
    "gitlens.defaultTimeFormat": "HH:mm",
    "gitlens.defaultDateFormat": "DD-MM-YYYY HH:MM",
    "diffEditor.ignoreTrimWhitespace": false,
    "git.suggestSmartCommit": false,
    "git.autoRepositoryDetection": "openEditors",
    "git.detectSubmodules": false,
    "git.inputValidationSubjectLength": null,
    "scm.providerCountBadge": "auto",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "debug.showInlineBreakpointCandidates": false,
    "plantuml.render": "Local",
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.startupPrompt": "never",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "telemetry.telemetryLevel": "error",
    "window.zoomLevel": 0,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.extension.orderedList.marker": "one",
    "markdown.extension.toc.orderedList": true,
    "markdown.extension.toc.updateOnSave": false,
    "plantuml.server": "https://www.plantuml.com/plantuml",
}
